    "def numberOfSteps(num: int):\n",
    "    if num == 0:\n",
    "        return 0\n",
    "    elif num%2:\n",
    "        return 1 + numberOfSteps(num//2)\n",
    "    else:\n",
    "        return 1 + numberOfSteps(num-1)\n",
    "print(numberOfSteps(30))"
   ]
  }
